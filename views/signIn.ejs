<div class="col-sm-6 col-lg-6 mb-3">
    <div class="title-left">
        <h3>Account Login</h3>
    </div>
    <form class="mt-3 review-form-box" id="formLogin" action="http://localhost:5000/user/signin" method="POST">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="InputEmail" class="mb-0">Email Address</label>
                <input type="email" class="form-control" id="InputEmail" placeholder="Enter Email" name='email'> </div>
            <div class="form-group col-md-6">
                <label for="InputPassword" class="mb-0">Password</label>
                <input type="password" class="form-control" id="InputPassword" placeholder="Password" name='password'> </div>
        </div>
        <button type="submit" class="btn hvr-hover">Login</button>
    </form>
</div>